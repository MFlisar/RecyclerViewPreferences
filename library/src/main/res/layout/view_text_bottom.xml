<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llRow2"
        style="@style/SettRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvIsUsingDefault"
            style="@style/SettDefaultValueTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/setting_info_is_using_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvValueBottom"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvValueBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right|end"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvIsUsingDefault"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.6"
            tools:text="Wert Wert Wert Wert Wert Wert Wert Wert Wert Wert"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>