<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llCustomValueContainer"
        style="@style/SettContainerCustomValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llTitle"
            style="@style/SettContainerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/SettTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Einstellungsname" />

            <TextView
                android:id="@+id/tvSubTitle"
                style="@style/SettSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Details..." />

            <SeekBar
                android:id="@+id/sbTop"
                style="@style/SettSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvValueTop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            tools:text="Wert" />

    </LinearLayout>

</layout>