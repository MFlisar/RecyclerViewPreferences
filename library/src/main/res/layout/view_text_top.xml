<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llCustomValueContainer"
        style="@style/SettContainerCustomValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llTitle"
            style="@style/SettContainerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvValueTop"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/SettTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Einstellungsname abc def ghi jkl"/>

                <TextView
                    android:id="@+id/tvSubTitle"
                    style="@style/SettSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Details..."/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvValueTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:gravity="right|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/llTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.6"
            tools:text="Wert Wert Wert Wert Wert Wert Wert Wert Wert Wert"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>